{
  "name": "sunnyside-world",
  "version": "1.0.0",
  "description": "Sunnyside World - Multiplayer pixel-art world builder",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "npx vite --open",
    "build": "npx vite build",
    "start": "node server/index.js"
  },
  "dependencies": {
    "concurrently": "^8.2.2",
    "dotenv": "^17.3.1",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "vite": "^5.0.12"
  }
}
